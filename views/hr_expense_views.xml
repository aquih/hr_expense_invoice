<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_expense_invoice_hr_expense_view_form" model="ir.ui.view">
        <field name="name">hr.expense.invoice.hr.expense.view.form</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <field name="currency_rate" position="after">
                <field name="factura_id" context="{'default_type': 'in_invoice', 'default_move_type': 'in_invoice'}" options="{'no_create': False}" readonly="state in ['approved', 'done']"/>
            </field>
        </field>
    </record>

</odoo>
